{
  "name": "navigation-test-utils",
  "version": "0.1.15",
  "main": "dist/index.js",
  "module": "dist/navigation-test-utils.esm.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "cleanup-after-each.js"
  ],
  "scripts": {
    "start": "tsdx watch",
    "build": "tsdx build",
    "test": "tsdx test --env=jsdom",
    "lint": "tsdx lint",
    "prepublishOnly": "rm -rf dist && yarn build"
  },
  "peerDependencies": {
    "react": ">=16",
    "react-native": "^0.61.4",
    "react-test-renderer": "^16.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged",
      "pre-push": "yarn test"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@babel/core": "^7.7.2",
    "@types/jest": "^24.0.22",
    "@types/react": "^16.9.11",
    "@types/react-dom": "^16.9.3",
    "@types/react-native": "^0.60.22",
    "husky": "^3.0.9",
    "metro-react-native-babel-preset": "^0.57.0",
    "prettier": "^1.18.2",
    "pretty-quick": "^2.0.1",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-native": "^0.61.4",
    "react-native-gesture-handler": "^1.5.0",
    "react-native-reanimated": "^1.4.0",
    "react-native-screens": "^2.0.0-alpha.7",
    "react-test-renderer": "^16.11.0",
    "ts-jest": "^24.1.0",
    "tsdx": "^0.11.0",
    "tslib": "^1.10.0",
    "typescript": "^3.7.2"
  },
  "dependencies": {
    "@testing-library/jest-native": "^3.0.2",
    "@testing-library/react-native": "^5.0.0",
    "navigation-components": "^0.2.17"
  },
  "jest": {
    "preset": "@testing-library/react-native",
    "modulePathIgnorePatterns": [
      "<rootDir>/example"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|react-native-screens|react-native-reanimated)/)"
    ],
    "setupFilesAfterEnv": [
      "@testing-library/react-native/cleanup-after-each",
      "./mock.js"
    ],
    "transform": {
      "^.+\\.(t)sx?$": "ts-jest"
    }
  }
}
